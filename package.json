{
  "name": "personnal-website",
  "version": "1.0.0",
  "private": false,
  "repository": "git@github.com:remipassmoilesel/personnal-website.git",
  "license": "GPL-3.0",
  "author": "RÃ©mi Passmoilesel <r.passmoilesel@protonmail.com>",
  "scripts": {
    "start": "DEBUG=true parcel src/index.html --host 0.0.0.0",
    "watch": "tsc --noEmit -w",
    "ci": "scripts/continuous-integration.sh",
    "lint": "npm-run-all lint:*",
    "lint:code": "eslint --fix './src/**/{*.tsx,*.ts}' --max-warnings=0 && prettier --write .",
    "lint:packagejson": "sort-package-json",
    "build": "npm-run-all build:clean build:type-check build:frontend build:cv:*",
    "build:clean": "rm -rf dist",
    "build:type-check": "tsc --noEmit",
    "build:frontend": "parcel build src/index.html --detailed-report",
    "build:cv": "npm-run-all build:cv:*",
    "build:cv:en": "pandoc --defaults cv/pandoc-en.yaml",
    "build:cv:fr": "pandoc --defaults cv/pandoc-fr.yaml",
    "bundle-analyze": "parcel build src/index.html --detailed-report --reporter @parcel/reporter-bundle-analyzer",
    "publish:docker": "scripts/publish-docker.sh"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "i18next": "^23.8.2",
    "i18next-browser-languagedetector": "^7.2.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-markdown": "^9.0.1",
    "typed.js": "^2.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@mixer/parallel-prettier": "^2.0.3",
    "@parcel/reporter-bundle-analyzer": "^2.11.0",
    "@parcel/transformer-html": "^2.11.0",
    "@parcel/transformer-inline-string": "^2.11.0",
    "@parcel/transformer-sass": "^2.11.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "prettier": "^3.2.5",
    "process": "^0.11.10",
    "sass": "^1.70.0",
    "sort-package-json": "^2.7.0",
    "typescript": "^5.3.3"
  }
}
